# Basic App Configuration
NEXT_PUBLIC_APP_NAME="FastWeb"
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION="One of the best web scaffolds in Python"
NEXT_PREFIX_CLS="fw"

# API Configuration
NEXT_PUBLIC_API_HOST=http://127.0.0.1:13000
NEXT_PUBLIC_API_BASE_URL=/api
# 10 seconds
NEXT_PUBLIC_API_TIMEOUT=10000

# Authentication Configuration
NEXT_PUBLIC_JWT_SECRET=your-super-secret-jwt-key
# 2 hours in milliseconds
NEXT_PUBLIC_TOKEN_EXPIRE_TIME=7200000

# Upload Configuration
# 10MB in bytes
NEXT_PUBLIC_UPLOAD_MAX_SIZE=10485760
NEXT_PUBLIC_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Theme Configuration
NEXT_PUBLIC_DEFAULT_THEME=light
# Chinese
NEXT_PUBLIC_DEFAULT_LANGUAGE=zh

# Development Configuration
NEXT_PUBLIC_ENABLE_MOCK=true
NEXT_PUBLIC_ENABLE_DEBUG=true
